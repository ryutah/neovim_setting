snippet dep "Deployment" b
apiVersion: apps/v1
kind: Deployment
metadata:
	labels:
		${1:app: my-app}
	name: ${2:my-deployment}
spec:
	replicas: 1
	selector:
		matchLabels:
			$3
	template:
		metadata:
			labels:
				${3:app: my-app}
		spec:
			containers:
				- image: ${4:nginx}
				  name: ${5:nginx}
endsnippet

