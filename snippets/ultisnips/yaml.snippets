apiVersion: v1
kind: Service
metadata:
	creationTimestamp: null
	labels:
		${1:app: my-app}
	name: ${2:my-svc}
spec:
	type: ${3:LoadBalancer}
	selector:
		${4:app: my-app}
	ports:
		- name: 80-80
		  protocol: TCP
		  port: 80
		  targetPort: 80
